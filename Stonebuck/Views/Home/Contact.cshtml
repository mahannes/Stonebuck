@model Stonebuck.Models.HomeViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<div class="col-md-6">
    <h3>@ViewData["Title"]</h3>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Message"></label>
            <textarea cols=40 rows=4 asp-for="Message" class="form-control"></textarea>
            <span asp-validation-for="Message"></span>
        </div>
        <input type="submit" value="Send message" />
    </form>
</div>

<div class="col-md-6">
    <div id="map" style="width:100%;height:500px;margin-top:30px"></div>
</div>

<script src="~/js/map.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBTm3GbJPsZ9EcJc_iR2iQtYUklOpjkW5o&callback=myMap"></script>
